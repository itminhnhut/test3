{
    "compilerOptions": {
        "baseUrl": ".",
        "checkJs": false,
        "jsx": "react",
        "module": "commonjs",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "outDir": "out",
        "paths": {
            "*": ["src/*"],
            "src": ["src/*"],
            "test/*": ["test/*"],
            "underscore": ["lodash"],
            "public": ["public/*"],
            "components": ["src/components/*"],
            "pages": ["src/pages/*"],
            "reducers": ["src/redux/reducers/*"],
            "config": ["src/config/*"]
        }
    },
    "exclude": ["build", "node_modules"]
}
